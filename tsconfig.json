{
  "compilerOptions": {
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "newLine": "LF",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "pretty": true,
    "strictNullChecks": true
  },
  "target": "es2015",
  "exclude": [
    "node_modules"
  ]
}
